{
     "SqlServerRetryOptions": {
          "MaxRetryCount": 5,
          "MaxRetryDelay": "00:00:05",
          "ErrorNumbersToAdd": []
     },
     "Serilog": {
          "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ], // Log ra Console và Log ra File
          "MinimumLevel": {
               "Default": "Error", // Default : "Warning"
               "Override": {
                    "Microsoft": "Error",
                    "System": "Error"
               }
          },
          // Để log ra console
          "WriteTo": [
               {
                    "Name": "Console", // Write to Console
                    "Args": {
                         "Theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
                    }
               },
               {
                    "Name": "File", // Write to File .txt
                    "Args": {
                         "path": "logs/log-.txt",
                         "rollingInterval": "Day",
                         "shared": true
                    }
               }
          ],
          "Enrich": [
               "FromLogContext",
               "WithMachineName",
               "WithThreadId"
          ]
     },
     "AllowedHosts": "*"
}
